{% extends 'base.html.twig' %}

{% block title %}Home - Job Status Dashboard{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold text-primary mb-3">
                <i class="fas fa-tasks me-3"></i>Job Status Dashboard
            </h1>
            <p class="lead text-muted">Monitor and track your BODS job executions in real-time</p>
        </div>
    </div>
</div>

<div class="row g-4 mb-5">
    <!-- Job Status Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 text-center">
            <div class="card-body">
                <div class="stats-card">
                    <i class="fas fa-list fa-3x mb-3"></i>
                    <h5 class="card-title">Job Status</h5>
                    <p class="card-text">View current status of all jobs with real-time updates</p>
                    <a href="{{ path('app_job_status') }}" class="btn btn-primary">
                        <i class="fas fa-eye me-2"></i>View Status
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Visualization Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 text-center">
            <div class="card-body">
                <div class="stats-card">
                    <i class="fas fa-project-diagram fa-3x mb-3"></i>
                    <h5 class="card-title">Visualization</h5>
                    <p class="card-text">Interactive network diagram showing job dependencies</p>
                    <a href="{{ path('app_job_status_visualization') }}" class="btn btn-primary">
                        <i class="fas fa-eye me-2"></i>View Diagram
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- History Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 text-center">
            <div class="card-body">
                <div class="stats-card">
                    <i class="fas fa-history fa-3x mb-3"></i>
                    <h5 class="card-title">Job History</h5>
                    <p class="card-text">Browse historical job execution records</p>
                    <a href="{{ path('app_job_history') }}" class="btn btn-primary">
                        <i class="fas fa-eye me-2"></i>View History
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Dependencies Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 text-center">
            <div class="card-body">
                <div class="stats-card">
                    <i class="fas fa-sitemap fa-3x mb-3"></i>
                    <h5 class="card-title">Dependencies</h5>
                    <p class="card-text">Explore job dependencies and relationships</p>
                    <a href="{{ path('app_job_dependencies') }}" class="btn btn-primary">
                        <i class="fas fa-eye me-2"></i>View Dependencies
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title mb-0">
                    <i class="fas fa-star me-2"></i>Dashboard Features
                </h3>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <i class="fas fa-sync-alt fa-2x text-primary"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5>Real-time Updates</h5>
                                <p class="text-muted">Automatic refresh every 30 seconds to keep job status current</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <i class="fas fa-search fa-2x text-primary"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5>Advanced Search</h5>
                                <p class="text-muted">Filter jobs by name, status, and other criteria</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <i class="fas fa-mobile-alt fa-2x text-primary"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5>Responsive Design</h5>
                                <p class="text-muted">Optimized for desktop, tablet, and mobile devices</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Status Legend -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>Status Legend
                </h3>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3 col-sm-6">
                        <div class="d-flex align-items-center">
                            <span class="status-badge status-in-progress me-3">IP</span>
                            <span>In Progress - Job is currently running</span>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="d-flex align-items-center">
                            <span class="status-badge status-completed me-3">OK</span>
                            <span>Completed - Job finished successfully</span>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="d-flex align-items-center">
                            <span class="status-badge status-error me-3">ER</span>
                            <span>Error - Job failed with error</span>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="d-flex align-items-center">
                            <span class="status-badge status-pending me-3">PE</span>
                            <span>Pending - Job waiting to start</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}